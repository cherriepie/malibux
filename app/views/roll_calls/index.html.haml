%p#notice= notice
%h1 Listing Roll Calls
%table
  %thead
    %tr
      %th{colspan: "4"}
  %tbody
    - @roll_calls.each do |roll_call|
      %tr
        %td= roll_call.name
        %td= link_to 'Show', roll_call
        %td= link_to 'Edit', edit_roll_call_path(roll_call)
        %td= link_to 'Destroy', roll_call, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Roll call', new_roll_call_path

=link_to "Initiate Server Check", init_roll_roll_call_path(self)
